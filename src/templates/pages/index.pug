extends ../template

block variables
    - var title = 'Главная'

block content
    .header 
        include ../common/header
    main.main.main_i
        .logo
            a.logo__link.logo__link_pos(href="/")
                img.logo-i(src="assets/img/svg/logo.svg", alt="")
            .logo__button
                button.btn.btn__link.btn-order
                    span.btn__title Оставить заявку 

    .modal.modal-order
        .contacts
            aside.contacts__logo.logo.logo_size
                a.logo__link(href="index.html")
                    img.logo-i(src="assets/img/svg/logo.svg", alt="")
            article.contacts__content
                form.form-sub#myOrder()
                    input.form-contact__name.form-contact__name_b(type="hidden", name="list", id="list")
                    .input-group.input-group__block
                        label.visually-hidden(for="name")
                        input.form-contact__name.form-contact__name_b(type="text", name="name", placeholder="ФИО", id="name", required )
                    .input-group.input-group__block
                        label.visually-hidden(for="email")
                        input.form-contact__email.form-contact__email_b(type="email", name="email" placeholder="Email", id="email", required)
                    .input-group.input-group__block
                        label.visually-hidden(for="tel")
                        input.form-contact__tel.form-contact__tel_b(type="tel", name="tel" placeholder="+7(___)___-__-__", id="tel", required)
                    .input-group.input-group__block
                        label.visually-hidden(for="description")
                        textarea.form-contact__text.form-contact__text_b(name="msg", cols="30", rows="5", placeholder="Опишите Вашу задачу...", id="description", required)
                    .input-group
                        label.file-upload
                            span.button Выбрать
                            mark Если у Вас есть ТЗ, прикрепите его
                            input(type="file", name="pack", id="pack")

                    .form-contact__btn
                        button.form-contact__sub.btn(type="submit") Оставить заявку
                        button.form-contact__back(type="button") Назад
    .modal.modal-success
        .modal__cont-s
            div Ваша заявка успешно отправлена.
            a(href="/").btn.btn__link
                    span.btn__title Ok

    .modal.modal-error
        .modal__cont-s
            div Что-то пошло не так, попробуйте заполнить форму заново.
            a(href="/").btn.btn__link
                    span.btn__title Ok

    .modal.modal-time
        .modal__cont-s
            div Подождите...
            div.bubblingG
                span#bubblingG_1
                span#bubblingG_2
                span#bubblingG_3